    <div>
        <!--Pure HTML
        <label>Address</label>
        <input class="form form-control" id="Address" name="Address" value="@Model.Address" type="text" />

        @* @Html.TextBox("Address", null, new { style = "color:red",@class="form form-control"}) *@
