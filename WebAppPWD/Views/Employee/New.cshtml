@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptOptions = new SelectList(ViewBag.deptList, "Id", "Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="Employee" ><!--In Edit case asp-route-id=Model.id-->
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="JobTitle"></label>
        <input class="form form-control" asp-for="JobTitle" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ImageURL"></label>
        <input class="form form-control" asp-for="ImageURL"/>
        <span asp-validation-for="ImageURL" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        @* <input class="form form-control" asp-for="DepartmentId" /> *@
        <select class="form form-control" asp-for="DepartmentId" asp-items="DeptOptions">
         <option value="0">--Select DEpartment--</option>   
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>


    </div>
    <input type="submit" value="Create" class="btn btn-secondary"/>
</form>
<a asp-action="Index" asp-controller="Employee">Back To List</a>





<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
